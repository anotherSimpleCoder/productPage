@using Umbraco.Cms.Web.Common.PublishedModels;
@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage<ContentModels.Homepage>
@using ContentModels = Umbraco.Cms.Web.Common.PublishedModels;
@{
	Layout = "Master.cshtml";
}


<div
	class="flex flex-col items-center"
>
	<h1
		class="text-4xl mb-4"
	>
		@Model.Value("slogan")
	</h1>

	<img
		src=@Model.Value("productImage")
		alt="Header Image"
		class="mb-4"
		width=300
		height=300
	/>
	
	@Model.Value("salesText")
	
	<button
		class="bg-sky-600 text-white mt-5 font-bold p-3"
	>
		BUY NOW @Model.Value("productPrice")€
	</button>
</div>

<style>
	button {
		cursor: pointer;
		
		transition-property: opacity;
		transition-duration: .5s;
		
		border: solid;
		border-color: transparent;
		border-radius: .75rem;
		
		&:hover {
			opacity: 90%;
		}
	}
</style>
